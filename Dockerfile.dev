FROM golang:1.23-alpine

WORKDIR /app

# Install git and build dependencies (required for some Go packages)
RUN apk add --no-cache git ca-certificates

# Set GOTOOLCHAIN to auto to let Go download the correct version
ENV GOTOOLCHAIN=auto

# Install Air for hot-reload
RUN go install github.com/air-verse/air@latest

# Copy go mod files first
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

EXPOSE 8888

CMD ["air"]